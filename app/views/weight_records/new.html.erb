<h1>New Weight Record</h1>

<%= form_with(model: @weight_record, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :weight %>
    <%= form.number_field :weight, class: 'form-control', step: 'any' %>
  </div>
  <div class="form-group">
    <%= form.label :height %>
    <%= form.number_field :height, class: 'form-control', step: 'any' %>
  </div>
  <div class="form-group">
    <%= form.label :recorded_at %>
    <%= form.date_field :recorded_at, class: 'form-control' %>
  </div>
  <%= form.submit 'Create', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', weight_records_path, class: 'btn btn-secondary' %>